<Window x:Class="AntennaReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntennaReader"
        mc:Ignorable="d"
        Title="PlotLeser" 
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{x:Static local:MainWindow.OpenImageCommand}"/>
        <KeyBinding Key="D" Modifiers="Ctrl" Command="{x:Static local:MainWindow.DeleteImageCommand}"/>

        <KeyBinding Key="S" Modifiers="Ctrl" Command="{x:Static local:MainWindow.SaveDBCommand}"/>
        <KeyBinding Key="V" Modifiers="Ctrl" Command="{x:Static local:MainWindow.OpenDBCommand}"/>

        <KeyBinding Key="D" Modifiers="Ctrl+Shift" Command="{x:Static local:MainWindow.DeleteDiagramCommand}"/>
        <KeyBinding Key="L" Modifiers="Ctrl" Command="{x:Static local:MainWindow.LockDiagramCommand}"/>
        <KeyBinding Key="P" Modifiers="Ctrl+Shift" Command="{x:Static local:MainWindow.DeletePointsCommand}"/>

        <KeyBinding Key="Z" Modifiers="Ctrl" Command="{x:Static local:MainWindow.UndoCommand}"/>
        <KeyBinding Key="Y" Modifiers="Ctrl" Command="{x:Static local:MainWindow.RedoCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Panel.ZIndex="1">
            <MenuItem Header="File">
                <MenuItem Header="Open Image" Click="OpenImage_Click"/>
                <MenuItem Header="Delete Image" Click="DeleteImage_Click"/>
            </MenuItem>
            <MenuItem Header="Database">
                <MenuItem Header="Save to Database" Click="SaveDB_Click"/>
                <MenuItem Header="Open Database Browser" Click="OpenDB_Click"/>
            </MenuItem>
            <MenuItem Header="Diagram">
                <MenuItem Header="Delete" Click="DeleteDiagram_Click"/>
                <MenuItem Header="Lock" Click="LockDiagram_Click"/>
                <MenuItem Header="Delete All Points" Click="DeletePoints_Click"/>
                <MenuItem Header="Interpolate Points" Click="InterpolatePoints_Click"/>
            </MenuItem>
            <MenuItem Header="Actions">
                <MenuItem Header="Undo" Click="Undo_Click"/>
                <MenuItem Header="Redo" Click="Redo_Click"/>
            </MenuItem>
        </Menu>

        <local:DrawingCanvas x:Name="drawingCanvas"
                Grid.Row="1"
                Background="DimGray"
                Visibility="Visible"/>
    </Grid>
</Window>