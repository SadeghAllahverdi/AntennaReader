<Window x:Class="AntennaReader.SaveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Antenna"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        FontSize="13">

    <Border Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                       Margin="0,0,10,10"
                       Foreground="red"
                       VerticalAlignment="Top"
                       Text="Antenna Name*:" />

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                <TextBox x:Name="AntennaNameBox"
                         ToolTip="Required (antennaCode_stationName)" />

                <TextBlock FontSize="10"
                           Foreground="Gray"
                           FontStyle="Italic"
                           Margin="2,2,0,0"
                           Text="Format: antennaID_stationName_(optional: frequency MHZ)" />
            </StackPanel>

            <TextBlock Grid.Row="1" Grid.Column="0"
                       Margin="0,0,10,10"
                       VerticalAlignment="Center"
                       Text="Owner:" />
            <TextBox x:Name="OwnerBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"
                     ToolTip="Optional (e.g. DB Netz)" />

            <TextBlock Grid.Row="2" Grid.Column="0"
                       Margin="0,0,10,10"
                       VerticalAlignment="Center"
                       Text="State:" />
            <TextBox x:Name="StateBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"
                     ToolTip="Optional (e.g. NRW)" />

            <TextBlock Grid.Row="3" Grid.Column="0"
                       Margin="0,0,10,10"
                       VerticalAlignment="Center"
                       Text="City:" />
            <TextBox x:Name="CityBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"
                     ToolTip="Optional (e.g. Dortmund)" />

            <StackPanel Grid.Row="4" Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0">
                <Button Width="90" Margin="0,0,8,0" IsCancel="True" Content="Cancel"/>
                <Button Width="90" IsDefault="True" Content="Save" Click="Save_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
